{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}

<h1>Voici la liste des articles :</h1>
<br>
<table>
   <tr>
       <th>Titre</th>
       <th>Date</th>
   </tr>


{% for article in articles %}
   <tr>
       <td><a href="{{ path('article', {id: article.id}) }}"></a></td>
       <td>{{ article.date|date("m/d/Y") }}</td>
   </tr>
{% endfor %}

</table>

{% endblock %}
